<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="plone.restapi"
    >

  <adapter
      factory=".SlotsStorage"
      provides=".interfaces.ISlotStorage"
      for="Products.CMFCore.interfaces.IContentish"
      />

  <adapter
      factory=".SlotsStorage"
      provides=".interfaces.ISlotStorage"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      />

  <adapter
      factory=".Slots"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      />
  <adapter
      factory=".Slots"
      for="Products.CMFCore.interfaces.IContentish"
      />

  <browser:page
      name="slots-controlpanel"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      class=".controlpanel.SlotsControlPanelView"
      permission="cmf.ManagePortal"
      />

  <adapter
      factory=".controlpanel.SlotsControlpanel"
      name="slots"
      />

  <adapter
      factory=".traversing.RestSlotsTraversing"
      provides="zope.traversing.interfaces.ITraversable"
      for="plone.rest.traverse.RESTWrapper
           zope.publisher.interfaces.IRequest"
      name="slot"
      />

  <adapter
      factory=".traversing.SlotsTraversing"
      provides="zope.traversing.interfaces.ITraversable"
      for="*
           zope.publisher.interfaces.IRequest"
      name="slot"
      />

</configure>
