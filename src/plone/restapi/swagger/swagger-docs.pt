<metal:page define-macro="master">
<tal:doctype tal:replace="structure string:&lt;!DOCTYPE html&gt;" />

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="navroot context/@@plone_portal_state/navigation_root_url;
                  config view/config;"
      i18n:domain="plone.restapi">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="x-ua-compatible" content="IE=edge" />
  <title>Not Guillotina</title>
  <link rel="icon" type="image/png"
        href="{{static_url}}images/favicon-32x32.png"
        sizes="32x32"
        />
  <link rel="icon" type="image/png"
        href="{{static_url}}images/favicon-16x16.png"
        sizes="16x16"
        />
  <link href='css/swagger-ui.css'
        tal:attributes="href string:${navroot}/++resource++restapi-swagger-docs/css/swagger-ui.css"
        media='screen' rel='stylesheet' type='text/css'/>

  <script type="application/json" id="swagger-configuration"
          tal:content="config/swagger_settings">
  </script>
  <script src='{{static_url}}integration.js'
          tal:attributes="src string:${navroot}/++resource++restapi-swagger-docs/integration.js"
          type="text/javascript">
  </script>
</head>

<body class="swagger-section">
